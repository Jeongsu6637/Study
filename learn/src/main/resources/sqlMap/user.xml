<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mapper 의 경로 설정 하는것. -->
<mapper namespace="com.learn.mapper.UserMapper">

    <insert id="signUp" parameterType="signupRequest">
        insert into User(id, password, name, birth_date, phone, address, email)
        values(#{id}, #{password}, #{name}, #{birth_date}, #{phone}, #{address}, #{email});
    </insert>

    <select id="login" resultType="User">
        select * from User where id = #{id} AND password = #{password};
    </select>

